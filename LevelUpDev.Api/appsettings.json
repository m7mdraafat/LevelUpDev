{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Azure.Cosmos": "Warning",
      "LevelUpDev": "Debug"
    }
  },
  "AllowedHosts": "*",
  "CosmosDb": {
    "EndpointUri": "https://your-cosmos-account.documents.azure.com:443/",
    "DatabaseName": "LevelUpDev",
    "Containers": {
      "Users": {
        "Name": "users",
        "PartitionKeyPath": "/id",
        "DefaultThroughput": 400
      },
      "UserStats": {
        "Name": "stats",
        "PartitionKeyPath": "/userId",
        "DefaultThroughput": 400
      },
      "Squads": {
        "Name": "squads",
        "PartitionKeyPath": "/id",
        "DefaultThroughput": 400
      },
      "Achievements": {
        "Name": "achievements",
        "PartitionKeyPath": "/userId",
        "DefaultThroughput": 400
      },
      "Leaderboards": {
        "Name": "leaderboards",
        "PartitionKeyPath": "/type",
        "DefaultThroughput": 400
      },
      "Challenges": {
        "Name": "challenges",
        "PartitionKeyPath": "/date",
        "DefaultThroughput": 400
      },
      "Activities": {
        "Name": "activities",
        "PartitionKeyPath": "/date",
        "DefaultThroughput": 400
      },
      "Notifications": {
        "Name": "notifications",
        "PartitionKeyPath": "/userId",
        "DefaultThroughput": 400
      },
      "CommunityGoals": {
        "Name": "communitygoals",
        "PartitionKeyPath": "/weekStart",
        "DefaultThroughput": 400
      }
    }
  }
}
